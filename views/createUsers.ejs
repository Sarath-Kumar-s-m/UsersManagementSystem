<!DOCTYPE html>
<html lang="en">
    <head>
        <%if(heading){%>
        <title><%= heading %></title> 
        <%}%>
        <!--Document-configuration-start-->
        <meta chartset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!--Document-configuration-end-->
        <!--Bootstrap-links-start-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!--Bootstrap-links-end-->
    </head>
    <body style="font-family: lato">
        <!--BS-fluid-container-1-start-->
        <div class="container-fluid d-flex justify-content-center justify-content-sm-center justify-content-md-center justify-content-lg-center align-items-center align-items-sm-center align-items-md-center align-items-lg-center p-0 vh-100">
            <!--BS-default-container-1-start-->
            <div class="col-11 col-sm-6 col-md-5 col-lg-3 px-4 pt-2 pb-3 bg-light shadow rounded">
                <div class="text-center h2 pt-4 pb-1" style="font-weight:700;">
                  <%if(heading){%>
                      <span><%= heading %></span>
                  <%}%>
                </div>       

            <%if(data){%>
                 <form action="/admin/dashboard/api/v1/updateuser?id=<%=data._id %>" method="post" class="was-validated">
                        <div class="mt-3 pt-5">
                            <label for="name" class="form-label font-weight-bold">UserName:</label>
                            <input type="text" class="form-control" value="<%=data.name%>" name="name" placeholder="<%= data.name %>" required>
                        </div>

                        <div class=" mt-2 pt-2">
                            <label for="email" class="form-label font-weight-bold">Email:</label>
                            <input type="email" class="form-control is-invalide" value="<%=data.email%>" id="email"  name="email"  placeholder="<%= data.email %>" required>
                            <div style="color:red"></div>
                        </div>

                        <div class=" mt-2 pt-2">
                            <label for="password" class="form-label font-weight-bold">Password:</label>
                            <input type="text" class="form-control" id="password" value="<%=data.password %>" name="password" placeholder="<%= data.password%>" required>
                            <div style="color: red"></div>
                         </div>

                        <div class="form-check font-weight-bold mt-2 pt-1">
                            <label for="checkbox" class="form-check-label px-2">
                            <input type="checkbox" class="form-check-input" name="state">
                            <small class="text-body-secondary">Check if your are creating new admin ?</small>
                            </label>
                        </div>

                        <div class=" text-center mt-1 pt-3 pb-2">
                            <button type="submit" class="btn btn-primary px-4" style="font-weight:700">Update</button>
                        </div>
                    </form>

                <%}else{%>

                    <form action="/admin/dashboard/api/v1/createuser" method="post" class="was-validated" >

                    <div class="mt-3 pt-5">
                        <label for="name" class="form-label font-weight-bold">UserName:</label>
                        <input type="text" class="form-control" placeholder="Username" name="name" required>
                    </div>

                    <div class=" mt-2 pt-2">
                        <label for="email" class="form-label font-weight-bold">Email:
                        <%if(emailValidationError){%> 
                        <span style="color:red"><small> <%= emailValidationError %></small></span>
                        <%}%>
                        </label>
                        <input type="email" class="form-control is-invalid" id="email" placeholder="Email" name="email" required>
                    </div>

                    <div class=" mt-2 pt-2">
                        <label for="password" class="form-label font-weight-bold">Password:
                        <%if(passwordValidationError){%> 
                        <span style="color: orange"><small> <%= passwordValidationError %></small></span>
                        <%}%> 
                        </label>
                        <input type="text" class="form-control" id="password" placeholder="Password" name="password"  required>
                    </div>

                    <div class="form-check font-weight-bold mt-2 pt-1">
                        <label for="checkbox" class="form-check-label px-2">
                        <input type="checkbox" class="form-check-input" name="state">
                         <small class="text-body-secondary">Check if your are creating new admin ?</small>
                        </label>
                    </div>

                    <div class=" text-center mt-1 pt-3 pb-2">
                       <button type="submit" class="btn btn-warning px-4" style="font-weight:700">Create</button>
                    </div>

                  </form> 
                <%}%>

                <%if(message){%>
                    <div class="alert alert-success alert-dismissible fade show mt-2 mb-0 p-2" role="alert">
                         <p class="m-0 p-0"><%= message %></p>
                         <button type="button" class="btn-close pb-2" data-bs-dismiss="alert" aria-label="Close"></button> 
                    </div>
                <%}%>
                 
                <%if(error){%>
                    <div class="alert alert-warning alert-dismissible fade show mt-2 mb-0 p-2" role="alert">
                        <p class="m-0 p-0"><%= error %></p>
                        <button type="button" class="btn-close pb-2" data-bs-dismiss="alert" aria-label="Close"></button> 
                    </div>
                <%}%>
            </div>
           <!--BS-default-container-1-end-->
        </div>
      <!--Bs-fluid-container-1-end-->   
    </body>
</html>